<script type="text/javascript">
    $('#myForm').on('submit', function(e){
  e.preventDefault();
  $('#exampleModal').modal('show');
  $('#exampleModal').on('hidden.bs.modal', function () {
    $('#myForm').unbind('submit').submit();
});
});
</script>

